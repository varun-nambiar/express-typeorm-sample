{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    // "baseUrl": "../../",
    // "rootDir": "./",
    // "sourceMap": true,
  },
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}